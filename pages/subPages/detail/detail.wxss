.swiper-wrapper {
  width: 100%;
  height: 820rpx;
}
.swiper-silde {
  width: inherit;
  height: inherit;
}
.swiper-image {
  width: inherit;
  height: inherit;
}
/*信息区  */
.overview {
  text-align: left;
  background-color: #fff;
  padding: 20rpx 32rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -ms-flex-direction: column;
  flex-direction: column;
}
.goods-name {
  font-size: 32rpx;
  line-height: 44rpx;
}
.goods-desc {
  font-size: 26rpx;
  color: rgba(0,0,0,.54);
  line-height: 40rpx;
}
.goods-price-wrap {
  line-height: 60rpx;
  height: 60rpx;
}
.goods-price {
  position: relative;
  color: #ff6700;
  font-size: 40rpx;
}
.goods-price::after {
  content: "元";
  font-size: 36rpx;
  position: absolute;
  right: -42rpx;
  top: 50%;
  transform: translateY(-50%);
}